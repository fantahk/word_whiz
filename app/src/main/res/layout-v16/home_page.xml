<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/books"
    android:orientation="vertical">

    <TextView
        android:id="@+id/rules"
        android:layout_width="match_parent"
        android:layout_height="279dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-25dp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="@string/rules_choose_the_word_that_you_think_belongs_to_the_given_definition_and_rack_up_points"
        android:textColor="#FFFFFF"
        android:textSize="13pt" />

    <TextView
        android:id="@+id/highestScore"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="@string/high_score"
        android:textColor="#FFFFFF"
        android:textSize="18pt" />

    <Button
        android:id="@+id/start"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="350dp"
        android:layout_marginRight="25dp"
        android:fontFamily="monospace"
        android:text="@string/start"
        android:textColor="#000000"
        android:textSize="18pt" />

    <TextView
        android:id="@+id/wordDefinition"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="184dp"
        android:fontFamily="monospace"
        android:text="@string/wotd"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/definition"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_alignBottom="@+id/wordDefinition"
        android:layout_marginBottom="-239dp"
        android:text="@string/definition"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />
</RelativeLayout>
